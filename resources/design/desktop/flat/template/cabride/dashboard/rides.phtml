function colorForStatus ($status) {
    switch ($status) {
        case "pending":
            return "label-info";
        case "onway":
        case "inprogress":
        case "accepted":
            return "label-info";
        case "done":
            return "label-success";
        case "declined":
        case "aborted":
            return "label-danger";
        case "expired":
            return "label-warning";
        default:
            return "label-info";
    }
}

$averageDistance = 0;
$averageDuration = 0;
$averageCost = 0;
$averageItems = 0;

$sumRating = 0;
$ratingItems = 0;

foreach ($rides as $ride) {
    $rating = $ride->getCourseRating();
    if ($rating > 0) {
        $ratingItems++;
        //
        $sumRating += $rating;
    }

    if ($ride->getStatus() === "done") {
        $averageItems++;
        //
        $averageDistance += $ride->getDistance() / 1000;
        $averageDuration += $ride->getDuration() / 60;
        $averageCost += $ride->getCost();
    }
}

$avgCost = $averageCost / $averageItems;
if (!is_numeric($avgCost) || is_nan($avgCost)) {
    $avgCost = 0;
}

$averageDistance = round($averageDistance / $averageItems, 1);
$averageDuration = ceil($averageDuration / $averageItems);
$averageCost = Base::_formatPrice($avgCost, $cu);
$averageRating = round($sumRating / $ratingItems, 2);

