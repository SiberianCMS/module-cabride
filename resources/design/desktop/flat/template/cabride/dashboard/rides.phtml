$cabride = (new Cabride())->find($valueId, "value_id");
if (!$cabride->getId()) {
    $cabride->setValueId($valueId);
    $cabride->save();
    $cabride->reload();
}

$rides = (new Request())->findAll([
    "value_id = ?" => $valueId,
], [
    "created_at DESC"
], [
    "limit" => 1000 // Only 1000 last ride requests for now.
]);

$du = $cabride->getDistanceUnit();
$cu = $cabride->getCurrency();
